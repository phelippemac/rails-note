<div class="col-lg-12 table-responsive">
    <div class="row title">
        <h1>Contatos</h1>
        <%= link_to new_contact_path, {class: 'btn btn-02 btn-lg padd'}  do %>
        <i class="fa fa-plus"></i> Novo Contato
        <% end %>
    </div>

    <table class="table table-responsive font-change">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Telefone</th>
                <th>Cliente</th>
                <th colspan=" 3">
                    <%= link_to "RelatÃ³rios", contacts_download_path(@contacts, format: 'pdf'), method: :post, class: 'btn btn-warning btn-lg', style: 'width: 20rem' %>
                </th>
            </tr>
        </thead>

        <tbody>
            <% @contacts.each do |contact| %>
            <tr>
                <td><%= contact.name %></td>
                <td><%= contact.email %></td>
                <td><%= contact.phone %></td>
                <td><%= contact.customer.name %></td>
                <td><%= link_to 'Mostrar', contact, class: 'btn btn-primary' %></td>
                <td><%= link_to 'Editar', edit_contact_path(contact), class: 'btn btn-warning' %></td>
                <td><%= link_to 'Deletar', contact, method: :delete, class: 'btn btn-danger' ,data: { confirm: 'Tem Certeza?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= paginate @contacts %>
</div>
<br>