<div class="card card-primary col-sm-12 col-lg-3 font-change">
<%= simple_form_for(@contact) do |f| %>
  <div class="card-header">
    <h1><%= phrase %> <i class="fa fa-pencil" aria-hidden="true"></i></h1>  
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  </div>
  
  <div class="card-body">
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :phone %>
      <%= f.association :customer %>
    </div>
  </div>
  
  <div class="card-footer">
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-success btn-lg' %>
      <% if show %>
        <%= link_to "Mostrar", @contact,  class: 'btn btn-warning btn-lg' %>
      <% end %>
      <% if back %>
        <%= link_to "Voltar", contacts_path,  class: 'btn btn-secondary btn-lg' %>
      <% end%>
    </div>
  </div>
  <% end %>

</div>