<p id="notice"><%= notice %></p>

<div class="title">
    <h1>Clientes</h1>
    <%= link_to new_customer_path, {class: 'btn btn-02 btn-lg padd'}  do %>
        <i class="fa fa-plus"></i> Novo Cliente
    <% end %>
</div>
<div class="table-responsive">
    <table class="table table-responsive font-change">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th colspan=" 3">
                </th>
            </tr>
        </thead>

        <tbody>
            <% @customers.each do |customer| %>
            <tr>
                <td><%= customer.name %></td>
                <td><%= customer.email %></td>
                <td><%= customer.phone %></td>
                <td><%= link_to 'Mostrar', customer, class: 'btn btn-primary' %></td>
                <td><%= link_to 'Editar', edit_customer_path(customer), class: 'btn btn-warning' %></td>
                <td><%= link_to 'Deletar', customer, method: :delete, class: 'btn btn-danger' ,data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<br>